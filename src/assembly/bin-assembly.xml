<!--
	Configuration for maven assembly plugin for binary distribution. To use this, run "mvn package assembly:assembly -Dassemble-bin"
-->
<assembly>
	<id>jar-with-dependencies</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>gemma:gemma-core</include>
			</includes>
			<binaries>
				<useDefaultExcludes>true</useDefaultExcludes>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<unpack>false</unpack>
						<scope>runtime</scope>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>