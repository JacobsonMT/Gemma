<?xml version="1.0" encoding="UTF-8" ?>
	<!--
		Example Sequoia controller configuration for Gemma. Note that this is a default setup with only the VirtualDatabase
		line added.
	-->
	<!-- @author paul -->
	<!-- @version $Id$ -->
<!DOCTYPE SEQUOIA-CONTROLLER PUBLIC "-//Continuent//DTD SEQUOIA-CONTROLLER 2.10.10//EN"  "http://sequoia.continuent.org/dt\
ds/sequoia-controller-2.10.10.dtd">

<SEQUOIA-CONTROLLER>
	<Controller port="25322">
		<Report hideSensitiveData="true" generateOnShutdown="true" generateOnFatal="true" enableFileLogging="true" />
		<JmxSettings>
			<RmiJmxAdaptor />
		</JmxSettings>
		<VirtualDatabase configFile="gemd-raidb1.xml" virtualDatabaseName="gemd" autoEnableBackends="true" />
	</Controller>
</SEQUOIA-CONTROLLER>
