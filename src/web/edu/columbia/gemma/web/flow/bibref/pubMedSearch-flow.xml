<!--  
    A Spring WebFlow.  Flows can be in 1 of 4 states:	
    view-state: displays associated view
    action-state:  can be used to execute bean defined in bean-factory.xml
    subflow-state: execute another flow
    end-state: end flow sequence
    
    This flow is used to search for pubMed Id's.
    Uncommented portions of this flow are implemented in mvc.  
    
    author: keshav
    version: $Id$	
-->

<!DOCTYPE webflow PUBLIC "-//SPRING//DTD WEBFLOW//EN"
	"http://www.springframework.org/dtd/spring-webflow.dtd">

<webflow id="pubMed.Search" start-state="criteria.view">

    <view-state id="criteria.view" view="pubMed.Search.criteria.view">
        <entry>
            <action bean="pubmedExecuteQueryAction" method="setupForm"/>
        </entry>
        <transition on="searchPubMed" to="searchNCBI">
            <action bean="pubmedExecuteQueryAction" method="bindAndValidate" />
        </transition>
    </view-state>
   
    <subflow-state id="pubMed.Edit.view" flow="pubMed.Edit">
        <attribute-mapper>
            <input name="bibliographicReference" value="${flowScope.bibliographicReference}" />
          <output name="bibliographicReference"/>
        </attribute-mapper>
        <transition on="finish" to="finish" />
        <transition on="error" to="error" />
    </subflow-state>

    <view-state id="results.view" view="pubMed.Search.results.view">
        <transition on="delete" to="delete" />
        <transition on="edit" to="pubMed.Edit.view" />
        <transition on="newSearch" to="criteria.view" />
        <transition on="viewfinish" to="finish" />
        <transition on="saveBibRef" to="save" />
        <transition on="error" to="error" />
    </view-state>

    <action-state id="cancel">
        <action bean="pubmedExecuteQueryAction" />
        <transition on="success" to="finish" />
        <transition on="error" to="error" />
    </action-state>

    <action-state id="update">
        <action bean="bibRefFormEditAction" />
        <transition on="success" to="finish" />
        <transition on="error" to="error" />
    </action-state>

    <action-state id="searchNCBI">
        <action bean="pubmedExecuteQueryAction" />
        <transition on="success" to="results.view" />
        <transition on="error" to="criteria.view" />
    </action-state>

    <action-state id="save">
        <action bean="pubmedExecuteQueryAction" />
        <transition on="success" to="results.view" />
        <transition on="error" to="results.view" />
    </action-state>

    <action-state id="edit">
        <action bean="bibRefFormEditAction" />
        <transition on="success" to="finish" />
        <transition on="error" to="error" />
    </action-state>

    <action-state id="delete">
        <action bean="pubmedExecuteQueryAction" />
        <transition on="success" to="finish" />
        <transition on="error" to="error" />
    </action-state>

    <end-state id="finish" view="redirect:/bibRef/showBibRef.html?accession=${flowScope.accession}" />
    <end-state id="error" view="error" />

</webflow>
