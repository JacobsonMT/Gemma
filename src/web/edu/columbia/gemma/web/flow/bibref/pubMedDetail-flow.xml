<!--
A Spring WebFlow.  Flows can be in 1 of 4 states:	
view-state: displays associated view
action-state:  can be used to execute bean defined in bean-factory.xml
subflow-state: execute another flow
end-state: end flow sequence

Allows you to select pubMed details.  This is a subflow of pubMed.Search.   

author: keshav
version: $Id$	
-->
<!DOCTYPE webflow PUBLIC "-//SPRING//DTD WEBFLOW//EN"
	"http://www.springframework.org/dtd/spring-webflow.dtd">

<webflow id="pubMed.Detail" start-state="detail.get">

	<action-state id="detail.get">
		<action bean="pubMed.Detail.criteria.formAction.getFormAction"/>
		<transition on="success" to="detail.view"/>
		<transition on="error" to="error"/>
	</action-state>

	<view-state id="detail.view" view="pubMed.Detail.view">
		<transition on="back" to="finish"/>
<!--		
		<transition on="back" to="finish"/>
		<transition on="select" to="colleagueId.set"/> -->
	</view-state>
<!--
	<action-state id="colleagueId.set">
		<action bean="person.Detail.colleagueId.set"/>
		<transition on="success" to="colleague.Detail"/>
		<transition on="error" to="error"/>
	</action-state>
	
	<subflow-state id="colleague.Detail" flow="person.Detail">
		<attribute-mapper bean="colleagueId.attributeMapper"/>
		<transition on="finish" to="detail.get"/>
		<transition on="error" to="error"/>
	</subflow-state>
-->	
	<end-state id="finish"/>
	
	<end-state id="error" view="error.view"/>
	
</webflow>