<?xml version="1.0" encoding="UTF-8"?>
<!--
A Spring WebFlow.  Flows can be in 1 of 4 states:	
view-state: displays associated view
action-state:  can be used to execute bean defined in bean-factory.xml
subflow-state: execute another flow
end-state: end flow sequence

This flow is used to search for pubMed Id's.  The flow has a subflow "pubMed.Detail" 

author: keshav
version: $Id$	
-->

<!DOCTYPE webflow PUBLIC "-//SPRING//DTD WEBFLOW//EN"
	"http://www.springframework.org/dtd/spring-webflow.dtd">

<webflow id="pubMed.Search" start-state="criteria.view">

	<view-state id="criteria.view" view="pubMed.Search.criteria.view">
		<transition on="submitPubMed" to="bindAndValidate"/> 
		<transition on="getBibRef" to="getAllBibRef"/> 
	</view-state>

	<action-state id="bindAndValidate">
		<action bean="pubMed.Search.criteria.formAction"/>
		<transition on="success" to="executeQuery"/>
		<transition on="error" to="criteria.view"/>
	</action-state>
	
	<action-state id="getAllBibRef">
		<action bean="pubMed.Search.getAllBibRef"/>
		<transition on="success" to="bibRef.results.view"/>
	</action-state>

	<action-state id="executeQuery">
		<action bean="pubMed.Search.executeQuery"/>
		<transition on="success" to="results.view"/>
		<transition on="error" to="criteria.view"/>
	</action-state>
	
	<view-state id="results.view" view="pubMed.Search.results.view">
		<transition on="newSearch" to="criteria.view"/>
		<transition on="saveBibRef" to="saveBibRef"/>
	    <!-- <transition on="select" to="pubMedId.set"/>-->
	    <transition on="select" to="pubMed.Detail"/>
	</view-state>
	
	<action-state id="saveBibRef">
		<action bean="pubMed.Search.executeQuery"/>
		<transition on="success" to="criteria.view"/>
		<transition on="error" to="criteria.view"/>
	</action-state>
	
	<view-state id="bibRef.results.view" view="bibRef.GetAll.results.view">
		<transition on="newSearch" to="criteria.view"/>
	    <!-- <transition on="select" to="pubMedId.set"/>-->
	    <transition on="select" to="pubMed.Detail"/>
	</view-state>
	<!-- 
	<action-state id="pubMedId.set">
		<action bean="pubMed.Search.id.set"/> 
		<transition on="success" to="pubMed.Detail"/>
		<transition on="error" to="error"/>
	</action-state>
	-->
	<subflow-state id="pubMed.Detail" flow="pubMed.Detail">
		<attribute-mapper>
            <input value="${sourceEvent.parameters.id}" as="title" />
		</attribute-mapper> 
		<transition on="finish" to="criteria.view"/>
		<transition on="error" to="error"/>
	</subflow-state>

	
	<end-state id="error" view="error.view"/>
	
</webflow>