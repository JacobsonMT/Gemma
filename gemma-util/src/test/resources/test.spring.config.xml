<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="configurationPropertyConfigurer"
		class="ubic.gemma.util.CommonsConfigurationPropertyPlaceholderConfigurer">
		<property name="configuration">
			<ref local="buildProperties" />
		</property>
		<property name="ignoreUnresolvablePlaceholders" value="false" />
		<property name="ignoreResourceNotFound" value="false" />
	</bean>

	<bean id="buildProperties" class="org.apache.commons.configuration.PropertiesConfiguration">
		<constructor-arg index="0">
			<value>Gemma.properties</value>
		</constructor-arg>
	</bean>

	<bean id="testConfigured" class="ubic.gemma.util.JustATestBean">
		<property name="myValue">
			<value>${testProperty}</value>
		</property>
	</bean>
	
</beans>
