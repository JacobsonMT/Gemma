<!--  Requests/responses with url pattern /login.jsp
    are preprocessed/postprocessed through the loginFilter.  -->

<!-- Acegi -->
<filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/*</url-pattern>
</filter-mapping>

<!-- All requests are decorated with sitemesh -->
<filter-mapping>
    <filter-name>sitemesh</filter-name>
    <url-pattern>/*</url-pattern>
    <!-- These are needed by Tomcat 5 for forwards -->
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
</filter-mapping>

