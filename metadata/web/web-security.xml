    <!-- Restrict all users from accessing *.html -->	
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Gemma</web-resource-name>
            <description>Require users to authenticate</description>    
            <url-pattern>/*</url-pattern>                    
            <http-method>POST</http-method>
            <http-method>GET</http-method>
        </web-resource-collection>
    
        <auth-constraint>
            <description>Define who can access this url-pattern</description>
            <role-name>admin</role-name>
            <role-name>tomcat</role-name>
        </auth-constraint>
        
        <user-data-constraint>
            <!-- Doesn't work on Resin 
            <description>
                Encryption is not required for the application in general.
			</description>
            -->
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
		<!-- Change this when getting closer to production (Use a JDBC or JNDI realm -->
        <realm-name>MemoryRealm</realm-name>
    </login-config>	
	
