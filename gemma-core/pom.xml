		<plugins>
			<plugin>
				<artifactId>xdoclet-maven-plugin</artifactId>
				<groupId>org.codehaus.mojo</groupId>
				<version>1.0-alpha-2</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>xdoclet</goal>
						</goals>
						<configuration>
							<tasks>
								<springdoclet
									destdir="${project.build.directory}/generated-sources/resources/ubic/gemma" validating="false" force="false">
									<fileset dir="${basedir}/src/main/java" includes="**/*.java" />
									<springxml
										destDir="${project.build.directory}/generated-sources/resources/ubic/gemma"
										mergeDir="${basedir}/src/conf/xdoclet-merge" destinationFile="applicationContext-serviceBeans.xml"
										useIds="true" />
								</springdoclet>
							</tasks>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>xdoclet</groupId>
						<artifactId>xjavadoc</artifactId>
						<version>1.1</version>
						<type>jar</type>
					</dependency>
					<dependency>
						<groupId>xdoclet</groupId>
						<artifactId>xdoclet-spring-module</artifactId>
						<version>1.2.3</version>
						<scope>compile</scope>
						<type>jar</type>
					</dependency>
					<dependency>
						<groupId>xdoclet</groupId>
						<artifactId>xdoclet-web-module</artifactId>
						<version>1.2.3</version>
						<scope>compile</scope>
						<type>jar</type>
					</dependency>
				</dependencies>
			</plugin>
