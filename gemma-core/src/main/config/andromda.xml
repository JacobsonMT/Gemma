<?xml version="1.0" encoding="UTF-8"?>

<andromda xmlns="http://andromda.org/core/configuration">
	<properties>
		<property name="modelValidation">${modelValidation}</property>
		<property name="cartridgeFilter">${filter}</property>
		<property name="loggingConfigurationUri">file:${project.basedir}/src/main/conf/log4j.xml
		</property>
	</properties>
	<server>
		<host>localhost</host>
		<port>4445</port>
	</server>
	<repositories>
		<repository name="emf-uml2">
			<models>
				<model type="emf-uml2">
					<uri>${project.basedir}/src/main/uml/gemma-om.uml2
					</uri>
					<moduleSearchLocations>
						<location patterns="**/*.uml">
							${project.basedir}/src/main/uml/
						</location>
					</moduleSearchLocations>
				</model>
			</models>
		</repository>

	</repositories>
	<mappingsSearchLocations>
		<location patterns="*Mappings.xml">${project.basedir}/src/main/conf/</location>
	</mappingsSearchLocations>
	<namespaces>
		<namespace name="default">
			<properties>
				<property name="languageMappingsUri">Java</property>
				<property name="wrapperMappingsUri">JavaWrapper</property>
				<property name="sqlMappingsUri">file:${project.basedir}/src/main/conf/MySQLMappings.xml
				</property>
				<property name="jdbcMappingsUri">JDBC</property>
				<property name="maxSqlNameLength">60</property>
				<property name="hibernateVersion">3</property>
				<property name="enableTemplating">true</property>
				<property name="enableAnnotations">true</property>
			</properties>
		</namespace>
		<namespace name="java">
			<properties>
				<property name="enumerations">${maven.andromda.core.generated.dir}</property>
				<property name="exceptions">${maven.andromda.core.generated.dir}</property>
				<property name="value-objects">${maven.andromda.core.generated.dir}</property>
				<property name="enableTemplating">true</property>
				<property name="enableAnnotations">true</property>
				<property name="mergeLocation">${project.basedir}/src/main/custom/java
				</property>
			</properties>
		</namespace>
		<namespace name="hibernate">
			<properties>
				<property name="hibernateDialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
				<property name="hibernateTypeMappingsUri">
					file:${project.basedir}/src/main/conf/HibernateTypeMappings.xml
				</property>
				<property name="hibernateQueryCacheFactory">org.hibernate.cache.StandardQueryCacheFactory
				</property>
				<property name="defaultHibernateGeneratorClass">native</property>
				<property name="hibernateInheritanceStrategy">${hibernate.inheritance.strategy}</property>
				<property name="hibernateCacheProvider">net.sf.ehcache.hibernate.EhCacheProvider</property>
				<property name="entities">${maven.andromda.core.generated.dir}</property>
				<property name="entity-impls">${maven.andromda.core.manual.dir}</property>
				<property name="entity-mappings">${maven.andromda.hibernate.configuration.dir}
				</property>
				<property name="user-types">${maven.andromda.core.generated.dir}</property>
				<property name="customTypesPackage">${application.package}</property>
				<property name="userTypesPackage">${application.package}.persistence.hibernate.usertypes
				</property>
				<property name="compositionDefinesEagerLoading">true</property>
				<property name="mergeLocation">${project.basedir}/src/main/custom/hibernate
				</property>
				<property name="mergeMappingsUri">file:${maven.andromda.merge.mappings}</property>
				<property name="hibernateCompositionCascade">all</property>
				<property name="hibernateAggregationCascade">none</property>
				<property name="hibernateDefaultCascade">none</property>
				<property name="specificCollectionInterfaces">false</property>
				<property name="associationEndCollectionIndexName">orderedCollectionIndex</property>
				<property name="configuration">${maven.andromda.hibernate.configuration.dir}
				</property>
				<property name="enableTemplating">true</property>
				<property name="hibernateEnableCache">true</property>
				<!--  NOTE: the ehcache.xml file gets generated whether we include the following or not. -->
				<property name="cache">${maven.andromda.hibernate.configuration.dir}
				</property>
				<property name="hibernateEnableAssociationsCache">true</property>
				<property name="ehCacheTimeToIdleSeconds">1200</property>
				<property name="ehCacheTimeToLiveSeconds">1200</property>
				<property name="ehCacheMaxElementsInMemory">10000</property>
				<property name="ehCacheOverflowToDisk">false</property>
			</properties>
		</namespace>
		<namespace name="cs">
			<properties>
				<property name="interfaces">${maven.andromda.core.generated.dir}</property>
			</properties>
		</namespace>
	</namespaces>
</andromda>
