<?xml version="1.0"?>
<!DOCTYPE compass-core-mapping PUBLIC
    "-//Compass/Compass Core Mapping DTD 1.0//EN"
    "http://www.opensymphony.com/compass/dtd/compass-core-mapping.dtd">
    
<!--
    This document is a Compass mapping file for expression experiments,
    allowing the ExpressionExperiment object to be indexed and searched.
    All "searchable" expression experiment attributes (as well as associations) 
    should be included here.
    
    author: keshav
    version: $Id$
-->    

<compass-core-mapping package="ubic.gemma.model">

<class name="expression.experiment.ExpressionExperimentImpl" alias="expressionExperiment" root="true">

    <id name="id" />
   
    <property name="name">
      <meta-data>name</meta-data>
      <meta-data>expression experiment name</meta-data>
    </property>
   
    <property name="description">
      <meta-data>description</meta-data>
      <meta-data>expression experiment description</meta-data>
    </property>
      
    <component name="bioAssays" ref-alias="bioAssay" />

    <!-- can be a reference instead of component
    <reference name="books" ref-alias="book" /> -->
   
</class>    

<class name="expression.bioAssay.BioAssayImpl" alias="bioAssay">
	
	 <id name="id" />
	 
	 <property name="name">
      <meta-data>name</meta-data> 
     </property>
     
     <property name="description">
      <meta-data>description</meta-data>
      <meta-data>bioassay description</meta-data>
    </property>
	 
    <!-- <component name="arrayDesignsUsed" ref-alias="arrayDesign" /> -->
	
</class>
