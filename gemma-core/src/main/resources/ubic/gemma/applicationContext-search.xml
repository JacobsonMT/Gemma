				<prop key="compass.engine.indexManagerScheduleInterval">-1
				</prop>
				<prop key="compass.engine.mergeFactor">1000</prop>
				<prop key="compass.engine.maxBufferedDocs">1000</prop>
				
			</props>
		</property>
		<property name="transactionManager">
			<ref bean="transactionManager"/>
		</property>
	</bean>
	
