	</bean>
	<bean id="probeGps" class="org.compass.gps.impl.SingleCompassGps" init-method="start" destroy-method="stop">
		<property name="compass">
			<ref bean="compassProbe"/>
		</property>
		<property name="gpsDevices">
			<list>
