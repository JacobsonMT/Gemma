					<property name="gpsDevice" ref="hibernateGpsDevice"/>
				</bean>
			</list>
		</property>
	</bean>
	
	<!-- Details of how indexing is done -->
	<bean id="compassExpression" class="org.compass.spring.LocalCompassBean">
		<property name="resourceLocations">
			<list>
				<value>classpath:ubic/gemma/compass/expression_mappings.cpm.xml
				</value>
			</list>
		</property>
		<property name="compassSettings">
			<props>
				<prop key="compass.engine.connection">file://${gemma.appdata.home}/compass/gemma/expression
				</prop>
				<prop key="compass.engine.lockFile">file://${gemma.appdata.home}/compass/gemma/expression/expression.lock
				</prop>
				<prop key="compass.transaction.factory"> org.compass.spring.transaction.SpringSyncTransactionFactory
				</prop>
				<prop key="compass.transaction.lockTimeout">20</prop>
				<prop key="compass.engine.analyzer.default.type">Snowball
				</prop>
				<prop key="compass.engine.analyzer.default.name">English
				</prop>
				<prop key="compass.engine.optimizer.schedule">false
				</prop>
				<prop key="compass.engine.optimizer.type">org.compass.core.lucene.engine.optimizer.NullOptimizer
				</prop>
				<prop key="compass.engine.indexManagerScheduleInterval"> -1
				</prop>
			</props>
		</property>
		<property name="transactionManager">
			<ref bean="transactionManager"/>
		</property>
	</bean>
	<bean id="compassGene" class="org.compass.spring.LocalCompassBean">
		<property name="resourceLocations">
			<list>
				<value> classpath:ubic/gemma/compass/gene_mappings.cpm.xml
