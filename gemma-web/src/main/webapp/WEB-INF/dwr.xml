<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE dwr PUBLIC
    "-//GetAhead Limited//DTD Direct Web Remoting 1.0//EN"
    "http://www.getahead.ltd.uk/dwr/dwr10.dtd">
    <!-- 
        Configuration for AJAX via Direct Web Remoting (dwr).
    -->
<dwr>
    <allow>
        <convert converter="bean" match="ubic.gemma.*" />
        <create creator="spring" javascript="userService"  >
            <param name="beanName" value="userService" />
            <include method="getUser" />
            <include method="getUsers" />
        </create>
        
       <create creator="new" javascript="UploadMonitor">
            <param name="class" value="ubic.gemma.web.util.upload.UploadMonitor"/>
        </create>
        
        <create creator="new" javascript="HttpProgressMonitor">
            <param name="class" value="ubic.gemma.web.util.progress.HttpProgressMonitor"/>
            <param name="force" value="true"/>
            <include method="getProgressStatus" />
        </create>
        
        <convert converter="bean" match="ubic.gemma.web.util.progress.ProgressData">
			  <param name="force" value="true"/>
		  </convert>
        
         
    </allow>
</dwr>
