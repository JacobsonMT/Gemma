	<!--
		see
		http://static.springsource.org/spring/docs/3.0.x/spring-framework-reference/html/ch10s05.html#transaction-declarative-txadvice-settings
	-->
	<aop:config>
		<aop:pointcut id="serviceMethod" expression="ubic.gemma.util.SystemArchitectureAspect.serviceMethod()" />
		<aop:advisor advice-ref="txAdvice" pointcut-ref="serviceMethod" />
	</aop:config>



	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<!-- Mostly we are using the pointcut, but this is useful for fine-tuning. -->
	<tx:annotation-driven />

	<tx:advice id="txAdvice">
		<!-- the transactional semantics... -->
		<tx:attributes>
			<tx:method name="get*" read-only="true" />
			<tx:method name="find*" read-only="true" />
			<tx:method name="load" read-only="true" />
			<tx:method name="loadAll" read-only="true" />
			<tx:method name="thaw*" read-only="true" />
			<tx:method name="findOrCreate" read-only="false" />
			<!-- other methods use the default transaction settings -->
			<tx:method name="*" />
		</tx:attributes>
	</tx:advice>



